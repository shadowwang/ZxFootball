<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRlRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/mIvHomeTeam"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/mTvHomeTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:layout_below="@id/mIvHomeTeam"
        android:textColor="@color/colorCommonTextDefault"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/mTvGoalPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/mIvHomeTeam"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="10dp"
        android:visibility="gone"
        />
</RelativeLayout>